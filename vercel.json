{
  "functions": {
    "api/*.go": {
      "runtime": "go1.x"
    }
  },
  "routes": [
    { "src": "/api/line-webhook", "dest": "/api/line-webhook.go" },
    { "src": "/api/monitor", "dest": "/api/monitor.go" },
    { "src": "/api/health", "dest": "/api/health.go" }
  ],
  "env": {
    "LINE_CHANNEL_SECRET": "@line_channel_secret",
    "LINE_CHANNEL_TOKEN": "@line_channel_token",
    "MONGODB_URI": "@mongodb_uri",
    "UR_API_KEY": "@ur_api_key"
  },
  "crons": [
    {
      "path": "/api/monitor",
      "schedule": "0 */1 * * *"
    }
  ]
}
